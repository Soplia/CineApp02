<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/movieDetailSecond">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/movieTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_zero"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:background="#800080"
        >

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/movieDetail3">
        <TextView
            android:id="@+id/movieDetailDuration"
            android:layout_width="@dimen/weight_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Duration"
            />
        <TextView
            android:id="@+id/movieDetailCategory"
            android:layout_width="@dimen/weight_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Category"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/movieComment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_zero"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/movieDetailRightP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#950ff0">
            <TextView
                android:id="@+id/movieDetailRightPress"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Press"
                />
            <RatingBar
                android:id="@+id/movieDetailRightPstar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:rating="1" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/movieDetailRightS"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#DC143C"
            >
            <TextView
                android:id="@+id/movieDetailRightSpect"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Spect"
                />
            <RatingBar
                android:id="@+id/movieDetailRightSstar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:rating="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>